<Window x:Class="Lékárna.AddAllergen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lékárna"
        mc:Ignorable="d"
         WindowState="Maximized"
        Title="AddAllergen" Height="1080" Width="1920">
    <Grid>
        <ListView HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Zadej alergen" FontSize="15"></Label>
            <TextBox x:Name="Allergen" HorizontalAlignment="Left" Height="25" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
            <TextBox x:Name="ID" HorizontalAlignment="Left" Height="25" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="add" Content="Přidat" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="50,0,0,0" Click="add_Click"/>
            <Button x:Name="back" Content="Zpět" Width="100" Margin="50,0,0,0" Click="back_Click"/>

        </ListView>

    </Grid>
</Window>
