<Window x:Class="Lékárna.Settings"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lékárna"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Settings" Height="1080" Width="1920">
    <Grid>
        <StackPanel Margin="0,42,1440,0">
            <Label Content="Seznam alergií" FontSize="45" HorizontalAlignment="Center"></Label>
            <ListView x:Name="AllergenL" SelectionChanged="ClickAdd" ></ListView>
        </StackPanel>
        <StackPanel Margin="530,42,910,0">
            <Label Content="Seznam vašich alergií" FontSize="45" HorizontalAlignment="Center"></Label>
            <ListView x:Name="HaveAllergen" SelectionChanged="ClickRem"></ListView>
        </StackPanel>
        <TextBox x:Name="Test" HorizontalAlignment="Left" Height="23" Margin="1460,283,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Add" Content="add" HorizontalAlignment="Left" Margin="1479,334,0,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
    </Grid>
</Window>
